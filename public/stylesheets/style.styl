body
  padding: 50px
  font: 14px "Lucida Grande", Helvetica, Arial, sans-serif
a
  color: #00B7FF

section.content
  text-align: center
  position: absolute;
  top: 0
  bottom: 0
  left: 0
  right: 0
  background-color: #ddd
  h1, h2
    color: #888
    font-size: 12em
    font-family: 'Electrolize', sans-serif;
    text-transform: uppercase
  h2
    padding-top: 2em
    font-size: 7em
    color: #dadada
  pre.need
    padding-top: 2em
    font-size: .75em
    font-weight: bold
    color: #d3d3d3
    opacity: 0.25
  .res1
    background-image: url(/images/resistance.png)
    background-position: center bottom
    background-repeat: no-repeat
    background-color: black
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0

header
  display: block
  position: absolute
  top: 0
  left: 0
  right: 0
  z-index: 1
  padding: 10px
  opacity: 0.2
  background-color: black
  &:hover
    -webkit-transition: opacity .45s ease-in-out
    opacity: 1

    nav
      -webkit-transition: opacity .45s ease-in-out
      opacity: 1

  nav
    opacity: 0
    float: right
    color: white
    span
      padding-left: 10px
      padding-right: 10px